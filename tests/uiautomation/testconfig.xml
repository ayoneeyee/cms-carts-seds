<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CARTS Test Suites">

    <listeners>
        <listener class-name="utility.ITestExecutionListener"/>
    </listeners>


    <!-- type of test we have in our framework -->
    <!-- we have : Smoke test -->
    <!-- All the test cases in SmokeTest.java belongs to this test called Smoke" -->
    <test name="Smoke">
        <classes>
            <class name="testcases.SmokeTest"/>
        </classes>
    </test>


    <test name="Demo">
        <classes>
            <class name="testcases.DemoTest"/>
        </classes>
    </test>


    <test name="Fix">
        <classes>
            <class name="testcases.FixTest"/>
        </classes>
    </test>

</suite>


